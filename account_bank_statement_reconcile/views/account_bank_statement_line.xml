<odoo>

    <record id="action_account_bank_statement_line_reconcile" model="ir.actions.server">
        <field name="name">Reconcile</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="model_id" ref="account.model_account_bank_statement_line"/>
        <field name="binding_model_id" ref="account.model_account_bank_statement_line"/>
        <field name="code">
            if records:
                action = records.action_open_reconcile()
        </field>
    </record>

    <record id="action_account_bank_statement_line_unreconcile" model="ir.actions.server">
        <field name="name">Unreconcile</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="model_id" ref="account.model_account_bank_statement_line"/>
        <field name="binding_model_id" ref="account.model_account_bank_statement_line"/>
        <field name="code">
            if records:
                action = records.action_unreconcile()
        </field>
    </record>

</odoo>
