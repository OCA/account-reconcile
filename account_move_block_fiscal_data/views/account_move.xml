<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- account.move inherit form view -->
    <record id="account_move_inherit_view_id" model="ir.ui.view">
        <field name="name">account.move.inherit.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_fiscal_data" widget="html" attrs="{'invisible': [('fiscal_data_locked', '=', False)]}"/>
                <field name="fiscal_data_locked" invisible="1"/>
            </xpath>
            <xpath expr="//label[@for='partner_id']" position="attributes">
                <attribute name="attrs">{'invisible':[('fiscal_data_locked', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="attrs">{'invisible':[('fiscal_data_locked', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>