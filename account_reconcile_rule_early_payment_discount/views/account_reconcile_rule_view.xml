<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_reconcile_rule_form" model="ir.ui.view">
        <field name="name">account.reconcile.rule.form</field>
        <field name="model">account.reconcile.rule</field>
        <field name="inherit_id" ref="account_reconcile_rule.view_account_reconcile_rule_form"/>
        <field name="arch" type="xml">
            <group name="rule" position="inside">
                <group name="early_payment_discount" attrs="{'invisible': [('rule_type', '!=', 'early_payment_discount')]}">
                    <label string="This rule is applied when the invoice payment term is an Early Payment Discount and if the statement respects the term and discount."/>
                </group>
            </group>
        </field>
    </record>
</odoo>
