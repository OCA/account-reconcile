<openerp>
<data>

<record id="account_journal_view_form" model="ir.ui.view">
    <field name="name">form account.journal</field>
    <field name="model">account.journal</field>
    <field name="inherit_id" ref="account.view_account_journal_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='account_control_ids']" position="after">
            <group name="group_bank_statement_security" attrs="{'invisible':[('type','!=','bank')]}">
                <separator string="Allowed Groups on Bank Statement (empty for default security)" colspan="4"/>
                <field name="bank_statement_allowed_group_ids" colspan="4" nolabel="1"/>
            </group>
            <group name="group_cash_register_security" attrs="{'invisible':[('type','!=','cash')]}">
                <separator string="Allowed Groups on Cash Register (empty for default security)" colspan="4"/>
                <field name="cash_register_allowed_group_ids" colspan="4" nolabel="1"/>
            </group>
        </xpath>
    </field>
</record>

</data>
</openerp>
