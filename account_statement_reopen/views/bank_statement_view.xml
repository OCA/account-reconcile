<?xml version="1.0" ?>
<openerp>
    <data>
        <record id="view_bank_statement_form" model="ir.ui.view">
            <field name="name">account.bank.statement.form (account_statement_reopen)</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_cancel']" position="before">
                    <button name="button_reopen" states="confirm" string="Re-open Statement" type="object" groups="account.group_account_manager"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>